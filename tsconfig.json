{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "isolatedDeclarations": true
  },
  "include": ["src"],
  "exclude": ["build.config.ts"]
}
